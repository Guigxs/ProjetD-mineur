<Manager>: 
    id: screen_manager
    screen_launcher: screen_launcher
    screen_easy: easy_button
    screen_medium: medium_button
    screen_hard: hard_button

    Launcher: 
        id : screen_launcher
        name : "Launcher"
        manager : screen_manager

    Easy: 
        id : easy_button
        name : "Easy"
        manager : screen_manager

    Medium: 
        id : medium_button
        name : "Medium"
        manager : screen_manager

    Hard: 
        id : hard_button
        name : "Hard"
        manager : screen_manager


<Launcher>:
    id : screen_launcher

    BoxLayout:
        orientation: 'vertical'

        Button : 
            text : 'Easy'
            on_press : 
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = .4
                root.manager.current = 'Easy'
        
        Button : 
            text : 'Medium'
            on_press : 
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = .4
                root.manager.current = 'Medium'
        
        Button : 
            text : 'Hard'
            on_press : 
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = .4
                root.manager.current = 'Hard'


<Easy>:
    id : screen_easy


<Medium>:
    id : screen_medium


<Hard>:
    id : screen_hard


<MyTopBoxLayout>:

    orientation: 'horizontal'
    size_hint : 1, .1
    id : topBoxLayout
    Label:
        id: flagLabel
        text : 'Bombes : '

    Button:
        id : restartButton
        text: "Restart"
        on_press : 


<MyBoxLayout>:
    orientation : 'vertical'
    id : globalBoxLayout


<MyGlobalBoxLayout>:
    orientation : 'vertical'


<MyGridLayout>:
    id : grille
    

<FirstPopup>:
    title : "Tu as perdu !"
    auto_dismiss : False 
    size_hint : 0.7, 0.5
    id : popup

    BoxLayout: 
        orientation: 'vertical'
        padding : 10
        spacing : 20

        Label: 
            text : "Que veux-tu faire ?"
            font_size : 20


        Button: 
            text: 'Quitter'
            on_release : popup.quit() 
            font_size : 20
            pos_hint : {'center_x': .5, 'center_y':.5}
    
        Button : 
            text: 'Sauvegarder mon score'
            font_size : 20
            on_release : popup.openSecondPopup()
            pos_hint : {'center_x': .5, 'center_y':.5}


<SecondPopup>:
    title : "Sauvegarde"
    auto_dismiss : False
    size_hint : 1, .6
    id : secondpopup
    pseudo : input

    BoxLayout:
        orientation: 'vertical'
        padding : 20
        spacing : 30    

        
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint : 1, .3

            Label : 
                text : "Ton pseudo : "
                font_size : 20

            TextInput: 
                id : input
                multiligne : False
                size_hint : 1, .4
                pos_hint : {'center_x': .5, 'center_y':.5} 


        Button: 
            text : 'Sauvegarder'
            font_size : 30
            size_hint : 1, .3
            on_release : secondpopup.save()


<OnPressButton>:
    background_down : "images/gris.png"



