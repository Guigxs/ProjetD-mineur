#:kivy 1.10.1

<MyBoxLayout>:
    orientation : 'vertical'
    id : globalBoxLayout

<MyTopBoxLayout>:

    orientation: 'horizontal'
    size_hint : 1, .1
    id : topBoxLayout
    Label:
        id: flagLabel
        text : 'Bombes : '

    Button:
        id : restartButton
        text: "Restart"
        on_press : 

    Label:
        id: tempsLabel
        text : "Temps : "

<MyGridLayout>:
    id : grille
    rows : 16
    cols : 16

<FirstPopup>:
    title : "Tu as perdu !"
    auto_dismiss : False 
    size_hint : 0.7, 0.5
    id : popup

    BoxLayout: 
        orientation: 'vertical'
        padding : 10
        spacing : 20

        Label: 
            text : "Que veux-tu faire ?"
            font_size : 20


        Button: 
            text: 'Quitter'
            on_release : popup.quit() 
            font_size : 20
            pos_hint : {'center_x': .5, 'center_y':.5}
    
        Button : 
            text: 'Sauvegarder mon score'
            font_size : 20
            on_release : popup.openSecondPopup()
            pos_hint : {'center_x': .5, 'center_y':.5}

<SecondPopup>:
    title : "Sauvegarde"
    auto_dismiss : False
    size_hint : 1, .6
    id : secondpopup
    pseudo : input

    BoxLayout:
        orientation: 'vertical'
        padding : 20
        spacing : 30    

        
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint : 1, .3

            Label : 
                text : "Ton pseudo : "
                font_size : 20

            TextInput: 
                id : input
                multiligne : False
                size_hint : 1, .4
                pos_hint : {'center_x': .5, 'center_y':.5} 


        Button: 
            text : 'Sauvegarder'
            font_size : 30
            size_hint : 1, .3
            on_release : secondpopup.save()


<OnPressButton>:
    background_normal : "images/gris.png"


<MyButton>:

<MyClock>:
    